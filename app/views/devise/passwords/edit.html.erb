<div id="form-container">
  <h2><%= t "devise.passwords.change_password" %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, t("devise.passwords.new_password") %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t "sign_up.characters_minimum" %>)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: t("form.password") %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t("devise.passwords.confirm_new_password") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t("form.password_confirmation") %>
    </div>

    <div class="actions">
      <%= f.submit t("devise.passwords.change_password") %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
