<%= stylesheet_link_tag "edit_user", media: "all", "data-turbolinks-track": true %>
<div class="card bg-light">
  <article class="card-body mx-auto">
    <h4 class="card-title mt-3 text-center"><%= t "form.change_password"%></h4>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"></span>
        </div>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: t("form.new_password") %>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"></span>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t("form.new_password_confirmation") %>
      </div>
      <div class="form-group">
        <%= f.submit t("form.update").upcase, class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <div>
      <p class="text-center"><%= render "devise/shared/links" %></p>
    </div>
  </article>
</div>
