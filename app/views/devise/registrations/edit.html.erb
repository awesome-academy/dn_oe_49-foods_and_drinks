<div id="form-container">
  <h2><%= t "devise.edit" %> <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, t("form.email") %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, t("form.password") %> <i>(<%= t "devise.leave_blank" %>)</i>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t "sign_up.characters_minimum" %>)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t("form.password_confirmation") %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password, t("devise.current_password") %> <i>(<%= t "devise.confirm_your_changes" %>)</i>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit t("devise.update") %>
    </div>
  <% end %>

  <h3><%= t "devise.cancel_account" %></h3>

  <p><%= t "devise.unhappy" %>? <%= button_to t("devise.cancel_account"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to t("devise.back"), :back %>
</div>
